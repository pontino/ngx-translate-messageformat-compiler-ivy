{
  "$schema": "./node_modules/ng-packagr/package.schema.json",
  "name": "ngx-translate-messageformat-compiler-ivy",
  "version": "4.5.0",
  "description": "Compiler for ngx-translate that uses messageformat.js to compile translations using ICU syntax for handling pluralization and gender",
  "ngPackage": {
    "lib": {
      "entryFile": "src/index.ts",
      "umdModuleIds": {
        "messageformat": "messageformat",
        "@ngx-translate/core": "core$1"
      }
    }
  },
  "scripts": {
    "clean": "rimraf dist dist.tgz src/**/*.d.ts src/**/*.metadata.json src/**/*.js",
    "test": "karma start",
    "test-watch": "karma start --singleRun=false --autoWatch=true",
    "lint": "tslint \"./src/**/*.ts\"",
    "format": "prettier -l \"./src/**/*.ts\" \"./*.js\"",
    "package": "ng-packagr -p tsconfig.json",
    "build": "npm-run-all lint format package",
    "prepublish": "npm-run-all clean build",
    "publish": "node ./publish.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pontino/ngx-translate-messageformat-compiler.git"
  },
  "keywords": [
    "angular",
    "angular 2",
    "declension",
    "i18n",
    "icu",
    "gender",
    "messageformat",
    "ngx-translate",
    "pluralization",
    "translate"
  ],
  "author": "Lukas Rieder",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lephyrus/ngx-translate-messageformat-compiler/issues"
  },
  "homepage": "https://github.com/lephyrus/ngx-translate-messageformat-compiler#readme",
  "main": "bundles/ngx-translate-messageformat-compiler.umd.js",
  "module": "index.js",
  "typings": "index.d.ts",
  "peerDependencies": {
    "@angular/core": "^6.0.0 || ^7.0.0 || ^8.0.0 || ^9.0.0",
    "@ngx-translate/core": "^10.0.0 || ^11.0.0",
    "messageformat": "^2.0.5"
  },
  "devDependencies": {
    "@angular/compiler": "^8.0.2",
    "@angular/compiler-cli": "^8.0.2",
    "@angular/core": "^8.0.2",
    "@ngx-translate/core": "^11.0.1",
    "@types/jasmine": "^3.3.9",
    "jasmine-core": "^3.3.0",
    "karma": "^4.0.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-jasmine": "^2.0.1",
    "karma-webpack": "^4.0.2",
    "messageformat": "^2.0.5",
    "ng-packagr": "^5.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^2.6.3",
    "rxjs": "^6.4.0",
    "tar": "^4.4.8",
    "ts-loader": "^6.0.4",
    "tsickle": "^0.35.0",
    "tslib": "^1.9.3",
    "tslint": "^5.13.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "~3.4.0",
    "webpack": "^4.29.5",
    "webpack-cli": "^3.2.3",
    "zone.js": "^0.9.1"
  }
}
